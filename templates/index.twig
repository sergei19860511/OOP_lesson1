<!DOCTYPE html>
<html lang="ru">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
	<title>Товары</title>
</head>
<body>
	<h2>Товары:</h2>
	<ul id = "good">
	</ul>
	<button id = "load">Ещё</button>

	<script>

		var from = 0;
		function loadMore()
        {
            $.ajax({
                url: '?from=' + from,
                dataType: 'html',
                success: function (html) {
                    $('#good').append(html);
                    from += {{ loadSize }};
                }
            });
        }
		loadMore();
		$('#load').click(function () {
			loadMore();
		});
	</script>
</body>
</html>